<Window x:Class="SpinningButtonAnimationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpinningButtonAnimationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSpinner" Height="50" Width="100" Content="I Spin!" MouseEnter="btnSpinner_MouseEnter" Click="btnSpinner_OnClick"/>
        <Button x:Name="ClickMeButton" Height="50" Width="100" Content="Click me!" HorizontalAlignment="Left" Margin="663,37,0,0" VerticalAlignment="Top" Loaded="ClickMeButton_Loaded" Click="ClickMeButton_Click"/>
    </Grid>
</Window>
