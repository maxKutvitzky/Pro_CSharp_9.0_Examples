@model IEnumerable<Make>
<div class="dropdown-menu">
    <a class="dropdown-item text-dark" asp-area="" asp-controller="Cars" aspaction="Index">All</a>
    @foreach (var item in Model)
    {
        <a class="dropdown-item text-dark" asp-controller="Cars" asp-action="ByMake" asp-routemakeId="@item.Id" asp-route-makeName="@item.Name">@item.Name</a>
    }
</div>